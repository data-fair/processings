{
  "$id": "https://github.com/data-fair/processings/worker/config",
  "x-exports": [
    "types",
    "validate"
  ],
  "x-ajv": {
    "coerceTypes": "array"
  },
  "type": "object",
  "title": "Worker config",
  "additionalProperties": false,
  "required": [
    "cipherPassword",
    "dataDir",
    "dataFairAPIKey",
    "dataFairAdminMode",
    "dataFairUrl",
    "defaultLimits",
    "mails",
    "maxFailures",
    "mongoUrl",
    "locks",
    "observer",
    "runsRetention",
    "worker",
    "secretKeys",
    "upgradeRoot"
  ],
  "properties": {
    "cipherPassword": {
      "type": "string"
    },
    "dataDir": {
      "type": "string"
    },
    "tmpDir": {
      "type": "string"
    },
    "dataFairAPIKey": {
      "type": "string"
    },
    "dataFairAdminMode": {
      "type": "boolean"
    },
    "dataFairUrl": {
      "type": "string",
      "pattern": "^https?://"
    },
    "defaultLimits" : {
      "type": "object",
      "properties": {
        "processingsSeconds": {
          "type": "number"
        }
      }
    },
    "getFromPrivateDataFairUrl": {
      "type": "boolean"
    },
    "mails": {
      "type": "object",
      "properties": {
        "transport": {
          "type": "object"
        }
      }
    },
    "maxFailures": {
      "type": "number",
      "description": "Number of failures before a processing becomes inactive"
    },
    "mongoUrl": {
      "type": "string"
    },
    "secretKeys": {
      "type": "object",
      "properties": {
        "events": {
          "type": ["string", "null"]
        }
      }
    },
    "privateEventsUrl": {
      "type": "string"
    },
    "locks": {
      "type": "object",
      "required": [
        "ttl"
      ],
      "properties": {
        "ttl": {
          "type": "number"
        }
      }
    },
    "observer": {
      "type": "object",
      "properties": {
        "active": {
          "type": "boolean"
        },
        "port": {
          "type": "number"
        }
      }
    },
    "privateDataFairUrl": {
      "type": "string"
    },
    "runsRetention": {
      "type": "number",
      "description": "Number of run logs to keep"
    },
    "worker": {
      "type": "object",
      "required": [
        "interval",
        "inactiveInterval",
        "inactivityDelay",
        "killInterval",
        "concurrency",
        "gracePeriod"
      ],
      "properties": {
        "interval": {
          "type": "number"
        },
        "inactiveInterval": {
          "type": "number"
        },
        "inactivityDelay": {
          "type": "number"
        },
        "killInterval": {
          "type": "number"
        },
        "concurrency": {
          "type": "number"
        },
        "gracePeriod": {
          "type": "number"
        }
      }
    },
    "upgradeRoot": {
      "type": "string"
    },
    "util": {},
    "get": {},
    "has": {}
  }
}